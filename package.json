{
  "name": "monorepo",
  "private": true,
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "build": "turbo run build",
    "build:pkg": "pnpm --filter @radix-ui/themes build",
    "dev": "turbo run dev --no-cache --continue",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules .turbo"
  },
  "devDependencies": {
    "@types/node": "^24",
    "prettier": "^3.4.2",
    "turbo": "^2.3.3",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "string-width": "4.2.3"
    }
  }
}
